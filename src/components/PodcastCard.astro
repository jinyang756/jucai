---
// 播客/文章卡片组件
interface Props {
    title: string;
    description: string;
    coverImage: string;
    link: string;
}

const { title, description, coverImage, link } = Astro.props;
---

<a href={link} class="block bg-white rounded-lg overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-105">
    <div class="relative h-48 overflow-hidden">
        <img src={coverImage} alt={title} class="w-full h-full object-cover transition-transform duration-500 hover:scale-110" />
    </div>
    <div class="p-6">
        <h3 class="text-xl font-bold mb-3 text-gray-800 hover:text-blue-600 transition-colors duration-300">{title}</h3>
        <p class="text-gray-600 line-clamp-3">{description}</p>
    </div>
</a>