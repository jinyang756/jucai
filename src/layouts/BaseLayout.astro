		.prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
			color: #1a202c; /* 深色标题 */
			margin-top: 2em; /* 增加标题上边距 */
			margin-bottom: 0.75em; /* 增加标题下边距 */
			font-weight: 700;
			line-height: 1.2;
			position: relative;
		}
		.prose h1 { 
			font-size: 2.5rem; 
			padding-bottom: 0.5rem;
			border-bottom: 3px solid var(--color-primary);
		}
		.prose h2 { 
			font-size: 2rem; 
			padding-bottom: 0.35rem;
			border-bottom: 2px solid var(--color-primary);
		}
		.prose h3 { font-size: 1.75rem; }
		.prose p {
			margin-bottom: 1.25em; /* 增加段落下边距 */
		}
		.prose ul, .prose ol {
