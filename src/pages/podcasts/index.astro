---
// 播客列表页面
import BaseLayout from '../../layouts/BaseLayout.astro';
import PodcastCard from '../../components/PodcastCard.astro';
// 导入内容集合
import { getCollection } from 'astro:content';

// 获取所有播客
const podcasts = await getCollection('podcasts');
---

<BaseLayout title="播客 - 经视故事汇">
    <style>
        /* 播客列表页面样式 */
        .podcasts-section {
            padding: 60px 0;
            margin-bottom: 60px;
        }
        .section-title {
            font-size: 32px;
            margin-bottom: 30px;
            text-align: center;
            color: #333;
        }
        .podcasts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 30px;
        }
    </style>

    <section class="podcasts-section">
        <div class="container">
            <h2 class="section-title">经视故事汇</h2>
            <div class="podcasts-grid">
                {podcasts.map(podcast => (
                    <PodcastCard
                        key={podcast.slug}
                        title={podcast.data.title}
                        description={podcast.data.description}
                        coverImage={podcast.data.coverImage || '/images/podcast-default.jpg'}
                        link={`/podcasts/${podcast.slug}`}
                    />
                ))}
                <!-- 示例播客，当内容集合为空时显示 -->
                {podcasts.length === 0 && (
                    <PodcastCard
                        title="黑天鹅事件对金融市场的影响"
                        description="分析黑天鹅事件对全球金融市场的短期和长期影响。"
                        coverImage="/images/podcast-cover-1.jpg"
                        link="#"
                    />
                )}
            </div>
        </div>
    </section>
</BaseLayout>